<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.droidcare"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".TitleActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:noHistory="true"
            android:parentActivityName=".TitleActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.droidcare.TitleActivity" />
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register"
            android:noHistory="true"
            android:parentActivityName=".TitleActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.droidcare.TitleActivity" />
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name=".EditProfileActivity"
            android:label="@string/title_activity_edit_profile"
            android:parentActivityName=".HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.droidcare.HomeActivity" />
        </activity>
        <activity
            android:name=".AppointmentDetailsActivity"
            android:label="@string/title_activity_appointment_details" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.droidcare.HomeActivity" />
        </activity>
    </application>

</manifest>
