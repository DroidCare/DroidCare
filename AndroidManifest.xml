<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.droidcare"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.droidcare.boundary.TitleActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.droidcare.boundary.LoginActivity"
            android:label="@string/title_activity_login"
            android:noHistory="true"
            android:parentActivityName="com.droidcare.boundary.TitleActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.droidcare.boundary.TitleActivity" />
        </activity>
        <activity
            android:name="com.droidcare.boundary.RegisterActivity"
            android:label="@string/title_activity_register"
            android:noHistory="true"
            android:parentActivityName="com.droidcare.boundary.TitleActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.droidcare.boundary.HomeActivity" />
        </activity>
        <activity
            android:name="com.droidcare.boundary.HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name="com.droidcare.boundary.EditProfileActivity"
            android:label="@string/title_activity_edit_profile"
            android:parentActivityName="com.droidcare.boundary.HomeActivity" >
            <meta-data
				android:name="android.support.PARENT_ACTIVITY"
                android:value="com.droidcare.boundary.HomeActivity" />        
        </activity>
        <activity
            android:name="com.droidcare.boundary.AppointmentDetailsActivity"
            android:label="@string/title_activity_appointment_details"
            android:parentActivityName="com.droidcare.boundary.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.droidcare.boundary.HomeActivity" />
        </activity>
        <activity
            android:name="com.droidcare.boundary.EditAppointmentActivity"
            android:label="@string/title_activity_edit_appointment" >
        </activity>
        <activity
            android:name="com.droidcare.boundary.ForgetPasswordActivity"
            android:label="@string/title_activity_forget_password"
            android:parentActivityName="com.droidcare.boundary.LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.droidcare.boundary.LoginActivity" />
        </activity>
    </application>

</manifest>
