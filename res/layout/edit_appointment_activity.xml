<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.droidcare.boundary.AppointmentDetailsActivity"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/main_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_world" />
        
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp" >

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="@string/LabelText_Consultant" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/consultant_field" />
            
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="@string/LabelText_dateTime" />
            
            <Button
                android:id="@+id/appointment_date_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_action_go_to_today"
                android:onClick="pickDateBtn"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:text="@string/appointment_date_field"
                android:gravity="left|center_vertical" />
            
            <Spinner
                android:id="@+id/appointment_time_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="@string/LabelText_healthIssue" />
            
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/healthIssue_field" />
            
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            
            <TextView
                android:layout_width="110dp"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:text="@string/LabelText_remarks" />
            
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:minLines="8"
                android:maxLines="8"
                android:lines="8"
                android:id="@+id/remarks_field" />
            
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="@string/LabelText_appointmentStatus" />
            
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/appointmentStatus_field" />
            
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            
            <Button
                android:layout_width="wrap_content"
                android:minWidth="80dp"
                android:layout_height="wrap_content"
                android:text="@string/Button_OK" />
            
        </LinearLayout>
    </LinearLayout>
</ScrollView>