<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    tools:context="com.droidcare.boundary.RegisterActivity"
        android:orientation="vertical" >

	    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name" />

	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/passport_label"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="@string/LabelText_passport" />
            <EditText
                android:id="@+id/passport_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/name_label"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="@string/LabelText_Name" />

            <EditText
                android:id="@+id/name_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/address_label"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="@string/LabelText_address" />

            <EditText
                android:id="@+id/address_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/email_label"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="@string/LabelText_Email" />

            <EditText
                android:id="@+id/email_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dob_label"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="@string/LabelText_dob" />
            <Button
                android:id="@+id/dob_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_action_go_to_today"
                android:onClick="pickDateBtn"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:text="@string/dob_field"
                android:gravity="left|center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/gender_label"
                android:layout_width="125dp"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="@string/LabelText_gender" />
            <Spinner
                android:id="@+id/gender_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:entries="@array/GenderField_values" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/nationality_label"
                android:layout_width="125dp"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="@string/LabelText_nationality" />

            <Spinner
                android:id="@+id/nationality_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:entries="@array/Nationality_values" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/password_label"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="@string/LabelText_Password" />

            <EditText
                android:id="@+id/password_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/confirm_label"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="@string/LabelText_Confirm" />

            <EditText
                android:id="@+id/confirm_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/notification_label"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="@string/LabelText_ModeOfNotification" />

            <CheckBox
		        android:id="@+id/sms_notification_checkbox"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/LabelText_SMSNotification"
		        android:onClick="onSMSNotificationClick" />
            
            <CheckBox
		        android:id="@+id/email_notification_checkbox"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/LabelText_EmailNotification"
		        android:onClick="onEmailNotificationClick" />
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <Button
                android:id="@+id/register_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="doRegisterUser"
                android:text="@string/ButtonText_Register" />
        </LinearLayout>
	
	    <LinearLayout
	        android:id="@+id/register_messages"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hello_world" />
	    </LinearLayout>
    </LinearLayout>
</ScrollView>