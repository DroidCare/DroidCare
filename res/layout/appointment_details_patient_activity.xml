<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.droidcare.boundary.AppointmentDetailsActivity"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical" >
        
        <TextView
            android:id="@+id/main_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/hello_world" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp" >

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="@string/LabelText_Patient" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/patient_field" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:layout_marginBottom="5dp" >
            

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="@string/LabelText_Consultant" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/consultant_field" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp" >

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="@string/LabelText_dateTime" />
            
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dateTime_field" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:layout_marginBottom="5dp" >
            
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="@string/LabelText_healthIssue" />
            
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/healthIssue_field" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:layout_marginBottom="5dp" >
            
            <TextView
                android:layout_width="110dp"
                android:layout_height="fill_parent"
                android:text="@string/LabelText_remarks" />
            
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minLines="8"
                android:maxLines="8"
                android:lines="8"
                android:id="@+id/remarks_field" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:layout_marginBottom="5dp" >
            
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="@string/LabelText_appointmentStatus" />
            
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/appointmentStatus_field" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editAppointment_button"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="@string/Button_Edit_Appointment"
            android:onClick="openEditAppointment" />
        
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancelAppointment_button"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/Button_Cancel_Appointment"
            android:onClick="openEditAppointment" />

    </LinearLayout>
</ScrollView>