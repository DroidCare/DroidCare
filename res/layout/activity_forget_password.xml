<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
   	tools:context="com.droidcare.boundary.ForgetPasswordActivity" 
   	android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    <RelativeLayout
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	   	tools:context="com.droidcare.boundary.ForgetPasswordActivity"   >
        
        <LinearLayout 
            android:id="@+id/forgetPasswordInstruction"
		    android:orientation="vertical"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="10dp"
	        android:layout_marginBottom="20dp"
	         >
		    
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/Label_ForgetPasswordInstruction" />  
		</LinearLayout>
		
        <LinearLayout
		    android:orientation="vertical"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/forgetPasswordInstruction" >
		    
		     <EditText 
	            android:id="@+id/emailAddress_field"
	            android:inputType="textEmailAddress"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/edittext_top_bg"
	            android:padding="10dp"
            	android:layout_marginBottom="10dp"
	            android:hint="@string/LabelText_Email"
	            android:textColorHint="#B5B5B5"
	            android:drawableLeft="@drawable/email"/>
		     
		    <Button
		        android:id="@+id/forgetPassword_button"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/Button_ForgetPassword"
		        android:onClick="forgetPassword"
		        style="@style/DefaultButtonText"
            	android:background="@drawable/button_default_bg" 
           	 	android:layout_margin="5dp"/>
		    
		</LinearLayout>
	
	</RelativeLayout>
</ScrollView>